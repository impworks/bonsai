@using Bonsai.Code.Services
@model Bonsai.Code.DomainModel.Facts.Models.LanguageFactModel
@Model.ShortTitle:
<ul>
    @foreach(var lang in Model.Values)
    {
        <li>
            @lang.Name
            @if(lang.Proficiency != null)
            {
                <span>(@lang.Proficiency.Value.GetLocaleEnumDescription())</span>
            }
            @if(lang.Duration != null)
            {
                <span>: @lang.Duration.Value.ShortReadableRange</span>
            }
        </li>
    }
</ul>
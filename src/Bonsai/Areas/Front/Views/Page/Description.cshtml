@using Bonsai.Areas.Front.ViewModels.Page
@using Bonsai.Localization
@model PageVM<PageDescriptionVM>
@{
    Layout = "~/Areas/Front/Views/Page/PageLayout.cshtml";

    ViewBag.PageModel = Model;
    ViewBag.Title = Model.Body.Title;
}

<div class="typography">
    @if(string.IsNullOrWhiteSpace(Model.Body.Description))
    {
        <div class="text-muted">@Texts.Front_Page_Description_Empty</div>
    }
    else
    {
        @Html.Raw(Model.Body.Description)
    }
</div>
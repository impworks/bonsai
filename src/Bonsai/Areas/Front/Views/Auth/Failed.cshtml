@using Bonsai.Localization
@{
    ViewBag.Title = Texts.Front_AuthFailed_Title;
    ViewBag.DisableSearch = true;
    Layout = "~/Areas/Front/Views/Layout.cshtml";
}

<div class="content text">
    <h1>@Texts.Front_AuthFailed_Title</h1>

    <p>
        @Html.Raw(Texts.Front_AuthFailed_Description)
    </p>
    
    <a href="@Url.Action("Login")" class="btn btn-lg btn-outline-primary">
        @Texts.Front_AuthFailed_GoBack
    </a>
</div>
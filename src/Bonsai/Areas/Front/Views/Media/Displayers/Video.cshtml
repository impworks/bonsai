@using Bonsai.Code.Utils.Helpers
@using Bonsai.Localization
@model Bonsai.Areas.Front.ViewModels.Media.MediaVM

@if(Model.IsProcessed)
{
    <div class="video-wrapper">
        <video class="media-video" controls poster="@Url.Content(Model.PreviewPath)" preload="auto">
            <source src="@Url.Content(Model.OriginalPath)" type="video/mp4" />
            <div class="alert alert-warning">@Texts.Front_Media_Video_BrowserUnsupported</div>
        </video>
    </div>
}
else
{
    <div class="photo-wrapper">
        <img src="@Url.MediaUrl(Model)" class="media-photo" alt="@Texts.Front_Media_Video_Processing" />
    </div>
    <div class="alert alert-info">
        @Texts.Front_Media_Video_TryRefreshing
    </div>
}